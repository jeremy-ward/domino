<!-- index.html -->
<!DOCTYPE html>
<html ng-app="main-app" ng-controller="main-ctrl">
    <head>
        <title>Domino Power!</title>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular.js"></script>
        <script type ="text/javascript" src="js/domino.js"></script>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <link rel="stylesheet" href="css/domino.css">
    </head>
    <body style="padding: 20px;">
        <div class = "container">
            <div class="jumbotron">
                <h1 id="main-heading" class="text-center">Domino Power!</h1>
                <div id="main-container" class="container">
                    <div class="row">
                        <div class="well col-md-4" >
                            <form class="text-center">
                                <div class="form-group">
                                    <label>Number of Dominoes:</label>
                                    <input type="number" ng-model="numDom" placeholder="Pick at least 7">
                                </div>
                                    <button id="how-big-btn" class="btn btn-primary" ng-click="countDomino(numDom)">How Big?&nbsp;&nbsp;<i class="fa fa-arrows-alt"></i></button>
                            </form>
                            
                            <div>
                                <h3>{{result.height}}</h3>
                                <h3>{{result.width}}</h3>
                                <h3>{{result.thick}}</h3>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="well" style="height:450px;" ng-hide="hidden">
                                <h4 id="big-as">About as tall as:  
                                    <span><a ng-href="{{result.nar.link}}" target="_blank">{{result.nar.name}}</a></span>
                                </h4>
                                <p id="result-desc">
                                    <img align="left" style="max-height: 350px; max-width:300px; padding: 20px;" ng-src="{{result.nar.img}}">
                                    {{result.nar.desc}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>